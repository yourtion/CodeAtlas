# CodeAtlas Production Environment Configuration
# Copy this file to .env and update with your production values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_NAME=codeatlas
DB_USER=codeatlas
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_PORT=5432
DB_SSLMODE=require
DB_MAX_CONNECTIONS=20

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8080
API_ENABLE_AUTH=true
API_CORS_ORIGINS=https://yourdomain.com
API_REQUEST_TIMEOUT=5m

# ============================================================================
# INDEXER CONFIGURATION
# ============================================================================
INDEXER_BATCH_SIZE=100
INDEXER_WORKER_COUNT=4
INDEXER_GRAPH_NAME=code_graph

# ============================================================================
# EMBEDDING CONFIGURATION
# ============================================================================
# For OpenAI API
EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_API_KEY=sk-your-openai-api-key-here
EMBEDDING_DIMENSIONS=768
EMBEDDING_BATCH_SIZE=50

# For local embedding server (alternative)
# EMBEDDING_API_URL=http://localhost:1234/v1/embeddings
# EMBEDDING_MODEL=text-embedding-qwen3-embedding-0.6b

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
