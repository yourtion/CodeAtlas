# CodeAtlas API Server Environment Configuration
# Copy this file to /etc/codeatlas/api.env and update with your production values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=codeatlas
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=codeatlas
DB_SSLMODE=require
DB_MAX_CONNECTIONS=20

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8080
API_ENABLE_AUTH=true
API_CORS_ORIGINS=https://yourdomain.com
API_REQUEST_TIMEOUT=5m

# ============================================================================
# INDEXER CONFIGURATION
# ============================================================================
INDEXER_BATCH_SIZE=100
INDEXER_WORKER_COUNT=4
INDEXER_GRAPH_NAME=code_graph

# ============================================================================
# EMBEDDING CONFIGURATION
# ============================================================================
EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_API_KEY=sk-your-openai-api-key-here
EMBEDDING_DIMENSIONS=768
EMBEDDING_BATCH_SIZE=50

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
